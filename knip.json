{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/*": {
      "entry": ["src/{index,main}.ts"],
      "project": "src/**/*.{ts,svelte}"
    }
  },
  "ignore": [
    "**/__tests__/**",
    "**/tests/**",
    "**/*.test.ts",
    "**/*.test.js"
  ],
  "ignoreDependencies": [
    "@tsconfig/svelte",
    "sass-embedded"
  ]
}
