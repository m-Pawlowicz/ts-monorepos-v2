{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "packages/**/src/**/*.js",
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.svelte",
    "packages/**/tests/**/*.ts",
    "packages/**/tests/**/*.js",
    "packages/**/tests/**/*.svelte",
  ],
  "exclude": ["**/assets/**/*", "node_modules", "dist"]
}